{
	"name": "ilclaudio/asset-lending-manager",
	"description": "WordPress plugin for asset lending management.",
	"type": "wordpress-plugin",
	"require-dev": {
		"phpunit/phpunit": "^9.5",
		"squizlabs/php_codesniffer": "^3.5",
		"wp-coding-standards/wpcs": "^3.0",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"yoast/phpunit-polyfills": "^4.0"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"scripts": {
		"lint": "phpcs",
		"lint:fix": "phpcbf",
		"test": "phpunit",
		"test:unit": "phpunit --testsuite unit",
		"test:integration": "phpunit -c phpunit-integration.xml --testsuite integration",
		"test:all": [
			"@test:unit",
			"@test:integration"
		]
	}
}
